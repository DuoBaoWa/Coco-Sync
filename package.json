{
  "name": "coco-sync",
  "version": "1.0.0",
  "description": "实时文件夹同步工具",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "jest",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": [
    "file-sync",
    "folder-sync",
    "real-time",
    "backup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "fs-extra": "^11.2.0",
    "md5-file": "^5.0.0",
    "minimatch": "^9.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "electron": "^34.3.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.cocosync.app",
    "productName": "CocoSync",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "ui/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "assets/tray-icon.png"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/tray-icon.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/tray-icon.png"
    }
  }
}
